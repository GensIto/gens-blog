{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "bun run build && wrangler deploy",
    "db:gen": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply gens-blog --local",
    "db:migrate:remote": "wrangler d1 migrations apply gens-blog --remote",
    "db:studio": "drizzle-kit studio --config drizzle.config.local.ts",
    "db:studio:prod": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "private": true,
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "honox": "0.1.52",
    "marked": "^17.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "@eslint/js": "^9.39.2",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.0.9",
    "@types/bun": "^1.3.6",
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.9",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.53.1",
    "vite": "^6.3.5",
    "wrangler": "^4.59.2"
  }
}
